<h1>Update <%= @album.name() %></h1>

<form action="/albums/<%= @album.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename album</label>
  <input id="name" name="name" type="text">

  <label for="album_year">Rename year</label>
  <input id="n" name="album_year" class="form-control" type="text">

  <label for="album_genre">Rename genre</label>
  <input id="n" name="album_genre" class="form-control" type="text">

  <label for="album_artist">Rename artist</label>
  <input id="n" name="album_artist" class="form-control" type="text">
  

  <button type="submit">Update</button>
</form>

<p><a href="/albums">Return to album list</a></p>

<form action="/albums/<%= @album.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete album</button>
</form>